<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="h5">Sign in with Apple</h1>
        </div>
        <div class="card-body">
            <p class="lead">
                This page demonstrates an integration of <a href="https://developer.apple.com/sign-in-with-apple/" rel="noopener" target="_blank">Sign in with Apple</a>.
            </p>
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <p class="text-justify">
                    @foreach (var claim in Context.User.Claims)
                    {
                        <div>
                            <code>@claim.Type</code>: <strong>@claim.Value</strong> (<code>@claim.Issuer</code>)
                        </div>
                    }
                </p>

                <a class="btn btn-lg btn-danger" href="/signout?returnUrl=%2F">Sign out</a>
            }
            else
            {
                <p class="text-justify">
                    Click the button below to sign into this sample application with your Apple ID.
                </p>
                <form action="/signin" method="post">
                    @* Image generated by https://appleid.apple.com/signinwithapple/button *@
                    <input class="sign-in-with-apple" src="~/img/appleid_button@1x.png" type="image" aria-label="Sign in with Apple" />
                </form>
            }
        </div>
    </div>
</div>
